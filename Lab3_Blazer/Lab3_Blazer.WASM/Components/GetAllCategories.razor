
@page "/category"
@inject IServices<Category> categoryservices


<h3>GetAllCategories</h3>
@if(CatList != null)
{
    @foreach(var item in CatList)
{
    <div class="card d-inline-block m-3 "  style="width: 18rem; height:300px" >
  <img src="/Images/@item.img" class="card-img-top h-50" alt="..." style="height:400px">
  <div class="card-body">
 
    <p class="card-text">@item.Name</p>
    <p class="card-text">@item.Description</p>

    
     
  </div>
  <br> <br>
  
  <a href="/pro/Edit/@item.Id" class="btn btn-primary d-inline-block" >edit</a> 
    
     <a href="/prod/@item.Id" class="btn btn-danger d-inline">Details</a>

</div>


} }


@code {

    public List<Category>CatList{ get; set; }

    protected override async Task OnInitializedAsync()
    {
        CatList =await categoryservices.GetAll();

         await base.OnInitializedAsync();
    }}
