@page "/Product"
@using Lab3_Blazer.shared
@using Lab3_Blazer.WASM.Services
@inject IServices<Product> proservices
<style>

img{
    height:500px;
}

</style>
<div style="background-color: #eee;" id="carouselExampleIndicators" class=" carousel slide h-50" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner ">
        <div class="carousel-item ">
            <img style="height: 500px;" class="d-block w-100 " src="https://cdn.vox-cdn.com/thumbor/NkEqvfv7ZPRMRPHyXKkB2I7uJVY=/0x0:2880x1536/1200x800/filters:focal(1420x546:1880x1006)/cdn.vox-cdn.com/uploads/chorus_image/image/69496619/Screen_Shot_2021_06_23_at_3.53.24_PM.0.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img style="height: 500px;" class="d-block w-100 " src="https://www.thoughtco.com/thmb/C7RiS4QG5TXcBG2d_Sh9i4hFpg0=/3620x2036/smart/filters:no_upscale()/close-up-of-clothes-hanging-in-row-739240657-5a78b11f8e1b6e003715c0ec.jpg" alt="Second slide">
        </div>
        <div class="carousel-item active">
            <img style="height: 500px;" class="d-block w-100 " src="https://mcmscache.epapr.in/post_images/website_300/post_17172529/thumb.jpg"  alt="Third slide" >
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@if(prodlist !=null)
{
<section>
@foreach(var item in prodlist)
{
         
            <div class="product-grid d-inline-block mb-3  "style="width:280px"  >
                <div class="product-image"style="width:280px"    >
                    <a href="#" class="image">
                        <img class="pic-1" src="/Images/@item.img" style="height:300px; width:280px">
                    </a>
                    <span class="product-sale-label">sale!</span>
                    <div class="price">@item.Price- $19.99 </div>
                    <a href="Details/@item.Id" class="add-to-cart"> add to cart </a>
                </div>
                <div class="product-content">
                    <h3 class="title"><a href="#">@item.Description</a></h3>
                    <ul class="rating">
                        <li class="fas fa-star"></li>
                        <li class="fas fa-star"></li>
                        <li class="fas fa-star"></li>
                        <li class="fas fa-star"></li>
                        <li class="fas fa-star"></li>
                    </ul>
                </div>
            </div>
     
  
}
</section>
}
@code {
	 public List<Product> prodlist { get; set; }
    protected async  override Task OnInitializedAsync()//pareter /inject 
    {
        prodlist= await proservices.GetAll();
        await  base.OnInitializedAsync();
    }

}
